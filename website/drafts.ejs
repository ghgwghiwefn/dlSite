<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/header.ejs") %>
    <a href="newLeague.ejs"><button>Make New Draft League</button></a>
    <h2>Draft Leagues:</h2>
    <nav>
        <% if (drafts.length > 0) { %>
            <% for (let i=0; i < drafts.length; i++) { %>
                <% if (drafts[i].readyForSignups && !drafts[i].private) { %>
                <section class = "dl">
                    <a href="/drafts/<%= drafts[i].id %>">
                        <h3 class="draftLeague"><%= drafts[i].name %></h3>
                    </a>
                </section>
                <br/>
                <% } %>
            <% } %>
        <% } else { %>
            <h3>There are no Draft Leagues to display...</h3>
        <% } %>
    </nav>
    <script type="text/javascript" src="loggedIn.js"></script>
</body>
</html>